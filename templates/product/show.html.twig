{% extends "base.html.twig" %}
{% block title %}
	Produit:
	{{product.name}}
{% endblock %}

{% block body %}

	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path ('homepage') }}">
				<font style="vertical-align: inherit;">Accueil
				</font>
			</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{ path ('product_category', {'slug': product.category.slug }) }}">
				<font style="vertical-align: inherit;">{{ product.category.name }}
				</font>
			</a>
		</li>
		<li class="breadcrumb-item active">
			<font style="vertical-align: inherit;">{{ product.name }}
			</font>
		</li>
	</ol>


	<h1>Produit:
		{{ product.name }}
		({{ product.price | amount }}
		)</h1>

	<div class="row">
		<div class="col-4">
			<img src="{{ product.mainPicture }}" alt="{{ product.name }}" class="img-fluid">
		</div>
		<div class="col">
			<span style="color:teal">({{ product.name }})</span>
			<p>{{product.shortDescription }}</p>
			<a href="{{ path ('cart_add', {'id': product.id}) }}" class="btn btn-success btn-lg">
				<i class="fa fa-shoping-cart"></i>Ajouter au panier
			</a>

		</div>
	</div>
{% endblock %}
